{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block main %}
	<div class="container p-2">
		<div class="row">

			<div class="login-img col-lg-7 d-flex justify-content-center">
				<img class='img-fluid' src="{{ asset('images/profile-login-style-vector.jpg') }}" alt=""></div>


			<div class="login-form pt-3 col-lg-5">
				<form method="post" class="w-75">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							Bonjour, 
							{{ app.user.username }},
							<a href="{{ path('app_logout') }}">Logout</a>
						</div>
					{% endif %}

					<h1 class="h3 mb-4 font-weight-normal text-center">Connectez-vous</h1>
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control my-2" autocomplete="email" required autofocus>
					<label class="mt-2" for="inputPassword">Mot de passe</label>
					<input type="password" name="password" id="inputPassword" class="form-control my-2" autocomplete="current-password" required>

					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{#
															                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
															                    See https://symfony.com/doc/current/security/remember_me.html
															            
															                    <div class="checkbox mb-3">
															                        <label>
															                            <input type="checkbox" name="_remember_me"> Remember me
															                        </label>
															                    </div>
															                #}

					<button class="btn btn-lg my-3" type="submit">
						Sign in
					</button>

					<div>Tu n'es pas encore inscrit ?
						<a href="">Clique ici</a>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
