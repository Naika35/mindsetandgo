{% extends 'base.html.twig' %}

{% block title %}Les Catégories
{% endblock %}

{% block main %}

	<section class='categories-list'>
		<div class="container">
			<h1>Les catégories de citations</h1>
			<div class="row">
				{% for category in categories %}
					<a class="card-category my-3 mx-auto col-lg-3 mx-lg-2" href="{{ path('quote_by_category', {'slug' : category.slug })}}">
						<div class="card mb-3">
							<img src="{{asset('uploadedImages/' ~ category.picture ~ '')}}" class="card-img-top" alt="...">
							<div class="card-body">
								<h5 class="card-title">{{category.name}}</h5>
							</div>
						</div>
					</a>
				{% endfor %}
			</div>

		</div>

	</section>
{% endblock %}
