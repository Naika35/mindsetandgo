{% extends 'admin/base.html.twig' %}


{% block title %}Liste des citations
{% endblock %}

{% block main %}

	<h1 class="mt-4 text-center">Liste des citations</h1>

	<div class="d-flex justify-content-end">
		<button class="btn btn-primary w-25"><a href="{{ path('admin_quote_add') }}">+ Ajouter une citation</a></button>
	</div>

	<table class="table table-hover mt-4">
		<thead>
			<tr class="table-primary">
				<th scope="col">Citation</th>
				<th scope="col">Auteur</th>
				<th scope="col">Catégorie</th>
				<th scope="col">Date de création</th>
				<th scope="col">Dernière de mise à jour</th>
				<th scope="col">Modifier</th>
				<th scope="col">Supprimer</th>
			</tr>
		</thead>
		<tbody>
			{% for quote in quotes %}
				<tr>
					<td>{{quote.content}}</td>
					<td>{{quote.author}}</td>
					<td>{{quote.category|json_encode}}</td>
					<td>{{quote.createdAt|format_datetime('short','short',locale='fr')}}</td>
					<td>{{quote.updatedAt ? quote.updatedAt|format_datetime('short','short',locale='fr') : 'Aucune modification faite' }}</td>
					<td>
						<button class="btn btn-warning">
							<a href="{{ path('admin_quote_edit', {'id': quote.id}) }}"><i class="bi bi-pencil-square"></i></a>
						</button>
					</td>
					<td>
						<button class="btn btn-warning">
							<a href="{{ path('admin_quote_delete', {'id': quote.id}) }}"><i class="bi bi-trash-fill"></i></a>
						</button>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}

