{% extends 'admin/base.html.twig' %}



{% block title %}Liste des utilisateurs
{% endblock %}

{% block main %}

<h1>Liste des membres</h1>

	<div class="container">
        <div class="row">
            <table class ="table table-hover">
                <thead>
                    <tr class="table-primary">
                        <th scope="col">Membre</th>
                        <th scope="col">Pseudo</th>
                        <th scope="col">Role</th>
                        <th scope="col">Date de création</th>
                        <th scope="col">Dernière de mise à jour</th>
                        <th scope="col">Modifier</th>
                        <th scope="col">Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr>
                        <td>
                            <div><img id="table-avatar" src= "{{ asset('uploadedImages/' ~ user.avatar ~ '') }}" alt="avatar du membre"></div>
                            <div>{{user.firstname}} {{user.lastname}}</div>
                            <div>{{user.email}}</div>
                        </td>
                        <td>{{user.pseudo}}</td>
                        <td>{{user.roles|json_encode}}</td>
                        <td>{{user.createdAt|format_datetime()}}</td>
                        <td>{{user.updatedAt ? updatedAt|format_datetime() : 'Aucune modification faite' }}</td>
                        <td><button class="btn btn-warning"><a href="{{ path('admin_user_edit', {'id': user.id}) }}">edit</a></button></td>
                        <td><button class="btn btn-warning" href="{{ path('admin_user_delete', {'id': user.id}) }}">delete</button></td>
                    </tr>
                        {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}
