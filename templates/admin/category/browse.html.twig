{% extends 'admin/base.html.twig' %}


{% block title %}Liste des catégories
{% endblock %}

{% block main %}

	<h1 class="mt-4 text-center">Liste des catégories</h1>

	<div class="d-flex justify-content-end">
		<button class="btn btn-primary w-25">
			<a href="{{ path('admin_category_add') }}">+ Ajouter une catégorie</a>
		</button>
	</div>

	<table class="table table-hover mt-4">
		<thead>
			<tr class="table-primary">
				<th scope="col">Image</th>
				<th scope="col">Nom</th>
				<th scope="col">Date de création</th>
				<th scope="col">Dernière de mise à jour</th>
				<th scope="col">Modifier</th>
				<th scope="col">Supprimer</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
                    <td><img id='table-picture-category' src="{{ asset('images/category/' ~ category.picture ~ '') }}" alt="Image de la catégorie"></td>
					<td>{{category.name}}</td>
					<td>{{category.createdAt|format_datetime('short','short',locale='fr')}}</td>
					<td>{{category.updatedAt ? category.updatedAt|format_datetime('short','short',locale='fr') : 'Aucune modification faite' }}</td>
					<td>
						<button class="btn btn-warning">
							<a href="{{ path('admin_category_edit', {'id': category.id}) }}">
								<i class="bi bi-pencil-square"></i>
							</a>
						</button>
					</td>
					<td>
						<button class="btn btn-warning">
							<a href="{{ path('admin_category_delete', {'id': category.id}) }}">
								<i class="bi bi-trash-fill"></i>
							</a>
						</button>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
